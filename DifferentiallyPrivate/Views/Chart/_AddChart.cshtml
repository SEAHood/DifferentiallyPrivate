@model DifferentiallyPrivate.Models.ChartModel

@using (Html.BeginForm("ChartingSimple", "Chart", FormMethod.Post, Model))
{
    <h3>New Chart</h3>
    <table>
        <tr>
            <td>
                @Html.LabelFor(c => c.queryType_input)
            </td>
            <td>
                @Html.TextBoxFor(c => c.iterations_input)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(c => c.epsilon_input)
            </td>
            <td>
                @Html.TextBoxFor(c => c.epsilon_input)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(c => c.binCount_input)
            </td>
            <td>
                @Html.TextBoxFor(c => c.binCount_input)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(c => c.data_input)
            </td>
            <td>
                @Html.TextBoxFor(c => c.data_input)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(c => c.queryType_input)
            </td>
            <td>
                @Html.RadioButtonFor(c => c.queryType_input, "avg")
                <label class="formLabel">Average</label>
            </td>
        </tr>
        <tr>
            <td>
            </td>
            <td>
                @Html.RadioButtonFor(c => c.queryType_input, "med")
                <label class="formLabel">Median</label>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Add" />
            </td>
        </tr>
    </table>
    
    
    
