<!-- Layout page, used for every page of the site -->
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>differentiallyprivate</title>
    <link rel="stylesheet" type="text/css" href="~/Content/css/default.css">
    <link rel="icon" type="image/ico" href="~/Content/img/favicon.ico">
    <link href='http://fonts.googleapis.com/css?family=Hammersmith+One' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Cambo' rel='stylesheet' type='text/css'>
    <script src="@Url.Content("~/Scripts/jquery-2.1.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="~/Content/js/highcharts.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            HideLogout();
        });

        function DirectToLogout() {
            window.location = "@Url.Action("Logout","Home")";
        }

        function ShowDarkScreen() {
            $('#darkScreen').css("height", $(document).height());
            $("#darkScreen").show();
        }

        function HideDarkScreen() {
            $("#darkScreen").hide();
        }

        function ShowLogout() {
            ShowDarkScreen();
            $("#yesNoDialog").show();
        }

        function HideLogout() {
            HideDarkScreen();
            $("#yesNoDialog").hide();
        }
    </script>
</head>
<body>
    <div id="wrapper">

	<div id="header">
	<a href="~/"><img src="~/Content/img/dplogo.png"/></a>
        <div id="nav">
            @if (Request.IsAuthenticated)
            {
                <a href="#" onclick="ShowLogout();return false;">logout</a>
            }
            else
            {
                <a href="~/about">about</a>
                <a href="~/charting">charting</a>
                <a href="~/howto">how to</a>
                <!--<a href="~/login">login</a>-->
            }    
	        </div>
        </div>

	<div id="darkScreen">
    </div>
    <div id="yesNoDialog">
        <img src="~/Content/img/logo.png" width="50px" />
        <h4>Log out?</h4>
        <input type="button" value="Yes" class="mainButton" onclick="DirectToLogout()">
        <input type="button" value="No" class="mainButton" onclick="HideLogout()"" />
    </div>

	<div id="content">
            @RenderBody()
	</div>
  
	<div id="footer">
	Website by Sam Hood - Honours Project 2014
	</div>
</div>
</body>
</html>